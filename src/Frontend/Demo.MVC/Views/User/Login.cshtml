@model Demo.MVC.Models.User.UserLoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">

    <div class="col-md-4 offset-md-4">
        <div class="card">

            <div class="card-body">

                <h5 class="card-title">Üye Giriş</h5>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form asp-controller="User" asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="UserName" for="exampleInputEmail1" class="form-label"></label>
                        <input type="text"  asp-for="UserName" class="form-control" >
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" for="exampleInputPassword1" class="form-label"></label>
                        <input type="password"  asp-for="Password" class="form-control" >
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Giriş yap</button>
                </form>
            </div>
        </div>
    </div>
</div>

