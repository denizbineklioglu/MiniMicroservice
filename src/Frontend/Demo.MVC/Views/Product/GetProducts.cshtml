@model IEnumerable<Demo.MVC.Models.Product.ProductListViewModel>
@{
    ViewData["Title"] = "GetProducts";
}

<h1>Ürünler</h1>

<div class="row">

    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Ad</th>
                                <th>Fiyat</th>
                                <th>Miktar</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img style="width:72px;" src="@item.ImageUrl" class="img-thumbnail" /></td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Price</td>
                                    <td>@item.Quantity</td>
                                    @*<td>@item.Category.CategoryName</td>*@
                                    <td>
                                        <a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.ProductID" class="btn btn-success btn-sm">Güncelle</a>

                                        <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.ProductID" class="btn btn-danger btn-sm">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        Ürün Bulunamadı
                    </div>
                }
                <a href="/Product/CreateProduct" class="btn btn-secondary">Ürün Ekle</a><br />
            </div>
        </div>
    </div>
</div>